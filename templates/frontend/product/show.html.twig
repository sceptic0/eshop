{% extends 'layout_frontend.html.twig' %}

{% block title %}Product #{{ product.hash }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.title}}</h5>
                        <h5 class="card-title">{{'price' | trans }}:{{ product.price}}</h5>
                        <h5 class="card-title">{{ 'created_at' | trans }}: {{ product.createdAt|date('d-M-Y')}}</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
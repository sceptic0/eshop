{% extends 'layout_frontend.html.twig' %}

{% block title %}Change password{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">
        {{ form_start(form) }}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('changePassword') }}">

        {% if app.user  %}
            <div class="row">
                <div class="form-group">
                    <label for="name">{{ form_label(form.oldPassword)}}</label>
                    {{ form_widget(form.oldPassword) }}
                </div>
                {% if form_errors(form.oldPassword)  %}
                    <div class="alert alert-warning">
                        {{ form_errors(form.oldPassword) }}
                    </div>
                {% endif %}
            </div>
        {% endif %}
        <div class="row">
            <div class="form-group">
                {{ form_widget(form.password) }}
            </div>
            {% if form_errors(form.password)  %}
                <div class="alert alert-warning">
                    {{ form_errors(form.password) }}
                </div>
            {% endif %}
        </div>
        <div class="row">
            <div class="form-group">
                {{ form_widget(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
